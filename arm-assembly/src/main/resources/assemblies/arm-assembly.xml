<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>arm-assembly</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>${project.build.directory}/arm</baseDirectory>  
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/arm</directory>
      <outputDirectory>/</outputDirectory>
      <!-- we must include only these two files in the zip that we upload to Marketplace -->
      <includes>
        <include>createUiDefinition.json</include>
        <include>mainTemplate.json</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
